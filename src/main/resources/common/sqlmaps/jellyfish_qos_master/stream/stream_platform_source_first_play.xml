<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="StreamPlatformSourceFirstplayDao">

    <resultMap id="StreamPlatformSourceFirstplayResult" class="com.roll.comical.console.business.stream.firstplay.platformsource.PlatformSourceFirstplay">
        <result property="platformId" column="platform_id"/>
        <result property="sourceId" column="source_id"/>
        <result property="date" column="date"/>
        <result property="bufferTime" column="buffer_time"/>
        <result property="bufferTimeCount" column="buffer_time_count"/>
    </resultMap>
    <select id="getList" parameterClass="map" resultMap="StreamPlatformSourceFirstplayResult">
        <![CDATA[
        select *
        from stream_platform_source_first_play_info
       	where `date` >= #startDate#
       	and `date` <= #endDate#
       	AND `platform_id` = #platformId#
        order by `date` asc, `source_id` asc
        ]]>
    </select>
</sqlMap>
