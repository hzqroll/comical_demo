<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="StreamSourcePlatformProvinceFirstplayDao">

    <resultMap id="SourcePlatformProvinceFirstplayResult"
               class="com.roll.comical.console.business.stream.firstplay.sourcePlatformProvince.StreamSourcePlatformProvinceFirstplay">
        <result property="platformId" column="platform_id"/>
        <result property="sourceId" column="source_id"/>
        <result property="provinceId" column="province_id"/>
        <result property="date" column="date"/>
        <result property="bufferTime" column="buffer_time"/>
        <result property="bufferTimeCount" column="buffer_time_count"/>
    </resultMap>

    <select id="getList" parameterClass="map" resultMap="SourcePlatformProvinceFirstplayResult">
        <![CDATA[

        select *
        from stream_source_platform_province_first_play_info
       	where
       	`source_id` = #sourceId#
       	and `date` >= #startDate#
       	and `date` <= #endDate#
        order by `date` asc, `platform_id` asc,`province_id` ASC

        ]]>
    </select>

    <select id="getProvinceList" parameterClass="map" resultMap="SourcePlatformProvinceFirstplayResult">
        <![CDATA[

        select *
        from stream_source_platform_province_first_play_info
       	where
       	`source_id` = #sourceId#
       	and `platform_id` = #platformId#
       	and `date` = #nowDate#
        order by `province_id` ASC

        ]]>
    </select>

    <select id="getAllList" parameterClass="map" resultMap="SourcePlatformProvinceFirstplayResult">
        <![CDATA[

        select *
        from stream_source_platform_province_first_play_info
       	where `date` = #nowDate#
        order by `province_id` ASC,`platform_id` ASC ,`source_id` ASC

        ]]>
    </select>

</sqlMap>
